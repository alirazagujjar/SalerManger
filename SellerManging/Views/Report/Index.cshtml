@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-4">
    <h2>Reports</h2>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Inventory Report</h5>
                    <p class="card-text">View current inventory levels and stock status</p>
                    <a asp-action="InventoryReport" class="btn btn-primary">Generate Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Sales Report</h5>
                    <p class="card-text">Download detailed sales report as PDF</p>
                    <a asp-action="ExportSalesReport" class="btn btn-primary">Download PDF</a>
                </div>
            </div>
        </div>
    </div>
</div>
